<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - Cuckoo</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/bootstrap/css")
        <style type="text/css">
          body { padding-top: 60px; padding-bottom: 40px; }
        .validation-summary-errors.alert.alert-block.alert-error ul li
        {
            list-style: none;
        }
        .validation-summary-errors.alert.alert-block.alert-error ul
        {
            margin: 0; padding: 0;
        }
        </style>
        @Styles.Render("~/Content/bootstrap-responsive/css")
        @*@Styles.Render("~/Content/css")*@
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <div class="navbar navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container-fluid">
                    <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    </a>
                    @Html.ActionLink("Cuckoo", "Index", "Home", new { @class = "brand" })
                    <div class="nav-collapse collapse">
                
                        @Html.Partial("_LoginPartial")

                        <ul class="nav">
                            <li class="active">@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("About", "About", "Home")</li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                        </ul>
                    </div><!--/nav-collapse -->
                </div>
            </div>
        </div>
        
        <div class="container-fluid">
            <div class="row-fluid">
                @RenderSection("featured", required: false)
            </div>
            <div class="row-fluid">
                @RenderBody()
            </div>
            <footer>
                <p>&copy; Cuckoo  @DateTime.Now.Year</p>
            </footer>
        </div><!--/fluid-container-->

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
    </body>
</html>
