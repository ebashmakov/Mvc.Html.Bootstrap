@using Mvc.Html.Bootstrap
@model Mvc.Bootstrap.Web.Models.LocalPasswordModel
@{
    ViewBag.Title = "Manage Account";
}
<div class="row-fluid">
    <div class="span12">
        <h1>@ViewBag.Title.</h1>
    </div>
</div>
<div class="row-fluid">
    <div class="span6">
        @Html.Alert(AlertType.Success, (string)ViewBag.StatusMessage)
        <p>You're logged in as <strong>@User.Identity.Name</strong>.</p>
        @if (ViewBag.HasLocalPassword)
        {
            @Html.Partial("_ChangePasswordPartial")
        }
        else
        { 
            @Html.Partial("_SetPasswordPartial")
        }
    </div>
    <div class="span6" id="externalLogins">
        @Html.Action("RemoveExternalLogins")

        <h3>Add an external login</h3>
        @Html.Action("ExternalLoginsList", new { ReturnUrl = ViewBag.ReturnUrl })
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="/Scripts/mvc.html.bootstrap.js"></script>
}
