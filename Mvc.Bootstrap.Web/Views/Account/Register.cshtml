@using Mvc.Html.Bootstrap
@model Mvc.Bootstrap.Web.Models.RegisterModel
@{
    ViewBag.Title = "Register";
}

<div class="row-fluid">
    <div class="span12">
        <h1>@ViewBag.Title.</h1>
        <h2>Create a new account.</h2>
    </div>
</div>
<div class="row-fluid">
    <div class="span12">
        @using (Html.BeginForm(FormType.Horizontal)) {   
            @Html.AntiForgeryToken()
            @Html.BootstrapValidationSummary("Please fix the following errors.")
            <fieldset>
                <legend>Registration Form</legend>
                @Html.ControlGroupFor(m => m.UserName)
                @Html.ControlGroupFor(m => m.Password)
                @Html.ControlGroupFor(m => m.ConfirmPassword)
                <div class="form-actions">
                    @Html.Button("Register", ButtonType.Primary, ButtonSize.Default, ButtonTag.InputSubmit)
                </div>  
            </fieldset>  
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="/Scripts/mvc.html.bootstrap.js"></script>
}
